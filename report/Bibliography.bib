   issn = {1432-1939},
   issue = {3},
   journal = {Oecologia},
   pages = {526-534},
   title = {Landscape composition and habitat area affects butterfly species richness in semi-natural grasslands},
   volume = {149},
   url = {https://doi.org/10.1007/s00442-006-0464-6},
   year = {2006},
}
