	pmid = {17536416},
	keywords = {Animals, Biodiversity, Biological Evolution, Birds, Climate, Ecosystem, Environment, Geography, Population Dynamics, Species Specificity},
	pages = {1309--1321},
}

@article{gao_variational_2016,
	title = {Variational {Information} {Maximization} for {Feature} {Selection}},
